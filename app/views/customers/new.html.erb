<h1>Cadastro de Novo Cliente</h1>

<%= form_for(@customer) do |f| %>
  <%= f.label :name, 'Nome' %> <%= f.text_field :name %> <br>
  <%= f.label :customer_type, 'Tipo de Cliente' %> <%= f.text_field :customer_type %> <br>
  <%= f.label :document, 'CPF/CNPJ' %> <%= f.text_field :document %> <br>
  <%= f.label :adress, 'Endereço de Faturamento' %> <%= f.text_field :adress %> <br>
  <%= f.label :email, 'Email' %> <%= f.text_field :email %> <br>
  <%= f.label :contact_name, 'Responsável' %> <%= f.text_field :contact_name %> <br>
  <%= f.label :phone_number, 'Telefone' %> <%= f.text_field :phone_number %> <br>
  <%= f.label :state_registration, 'Inscrição Estadual' %> <%= f.text_field :state_registration %> <br>
  <%= f.label :vip, 'Vip' %>  <%= f.check_box :vip %>
  <%= f.submit 'Cadastrar Cliente' %> <br>
<h3>  <%= flash[:errors] %> </h3>
<% end %>

<%= link_to 'Voltar', root_path %>
