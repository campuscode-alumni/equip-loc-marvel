<h1>Visualização de Contrato</h1>

<h2>
  Cliente:
  <%= @contract.customer.name %>
</h2>

<div>
  Equipamentos:
  <% @contract.equipment.each do |e| %>
    <%= e.name %>
    <%= e.acquisition_value %>
    <%= e.serial_number %>
    <%= e.equipment_type.name %>
    <%= e.equipment_type.current_price(@contract.rental_period) %>
  <% end %>
</div>
<div>
 Prazo de locação:
  <%= @contract.rental_period %>
</div>
<div>
  Valor de locação:
  <%= @contract.amount %>
</div>
<div>
  Desconto:
  <%= @contract.discount %>
</div>
<div>
  Valor Final:
  <%= @contract.total_amount %>
</div>
<div>
  Endereço de entrega:
  <%= @contract.delivery_address %>
</div>
<div>
  Responsável pela obra:
  <%= @contract.contact %>
</div>
<div>
  Forma de pagamento:
  <%= @contract.payment_method %>
</div>
<div>
  Data de início:
  <%= @contract.start_date %>
</div>
<div>
  Data de emissão:
  <%= @contract.created_at.to_s %>
</div>
<div>
  Data de fim:
  <%= @contract.end_date %>
</div>
<div>
  <% if @contract.delivery_receipt %>
    <%= link_to 'Exibir Recibo de Entrega', contract_delivery_receipts_path(@contract), method: :post %>
  <% else %>
    <%= link_to 'Emitir Recibo de Entrega', contract_delivery_receipts_path(@contract), method: :post %>
  <% end %>
</div>
<br>
<%= link_to 'Emitir Recibo de Devolução', new_contract_return_receipt_path(@contract) %>
